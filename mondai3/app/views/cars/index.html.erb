<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Name</th>
      <th>Car type</th>
      <th>Model</th>
      <th>Color</th>
      <th>Price</th>
      <th>Maker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.customer_name %></td>
        <td><%= car.phone %></td>
        <td><%= car.address %></td>
        <td><%= car.name %></td>
        <td><%= car.car_type %></td>
        <td><%= car.model %></td>
        <td><%= car.color %></td>
        <td><%= car.price %></td>
        <td><%= car.maker.name %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

