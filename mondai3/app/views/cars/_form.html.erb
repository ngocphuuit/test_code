<%= form_with(model: car, local: true) do |form| %>
  <% if car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :customer_name %>
    <%= form.text_field :customer_name, id: :car_customer_name %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.number_field :phone, id: :car_phone %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :car_address %>
  </div>

  <div class="field">
    <%= form.label :maker_id %>
    <%= form.select :maker_id, Maker.order(name: :desc).pluck('name, id'), id: :car_maker_id %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :car_name %>
  </div>

  <div class="field">
    <%= form.label :car_type %>
    <%= form.text_field :car_type, id: :car_car_type %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.number_field :model, id: :car_model %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color, id: :car_color %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :car_price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
